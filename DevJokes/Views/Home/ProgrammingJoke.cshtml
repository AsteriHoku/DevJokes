@model ProgrammingJoke
@{
    ViewData["Title"] = "Programming Joke";
}

<script>
window.onload = function () {
    const copyButton = document.getElementById("copyButton");

    if (copyButton) {
        copyButton.addEventListener("click", () => {
            copyToClipboard();
        });
    }
};
</script>

<style>
</style>

<h1>
    <i class="fa-solid fa-code mx-2"></i>@ViewData["Title"]
</h1>
<h6 class="tiny-font" style="white-space: nowrap;">@Model.binary</h6>
<hr class="mt-2 mb-4">
<div class="container d-flex justify-content-center align-items-center">
    <div class="col-xs-10 col-md-6 text-center">
        <h2 class="geek-font">Here's a programming joke:</h2>
        <hr class="my-4">
        <div id="joke">
            <p>@Model.setup</p>
            <p>@Model.punchline</p>
        </div>
    </div>
</div>
<div class="text-center my-3">
    <div class="row d-flex">
        <div class="col-6 d-flex justify-content-end">
            <button class="btn btn-outline-info" id="copyButton">
                <i class="fa-regular fa-copy mx-3" id="copyIcon"></i>
            </button>
        </div>
        <div class="col-6 d-flex align-items-start">
            <button class="btn btn-info button-font px-2" id="refreshButton">
                <a class="nav-link text-dark px-0" asp-area="" asp-controller="Home" asp-action="ProgrammingJoke">++ || !++</a>
            </button>
        </div>
    </div>
</div>