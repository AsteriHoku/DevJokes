@model DevJoke
@{
    ViewData["Title"] = "Dev Joke";
}
<script>
const icon = document.getElementById("copyIcon");

icon.addEventListener("click", function() {
    copyToClipboard();
});

function copyToClipboard() {
    const element = document.getElementById("joke");
    const textArea = document.createElement("textarea");
    const textToCopy = element.textContent;
    textArea.value = textToCopy;
    document.body.appendChild(textArea);
    textArea.select();
    document.execCommand("copy");
    document.body.removeChild(textArea);
    alert("Text copied to clipboard: " + textToCopy);
}

</script>

<style>
</style>

<h1>@ViewData["Title"]</h1>
<h6 class="tinyfont" style="white-space: nowrap;">@Model.binary</h6>
<hr class="mt-2 mb-4">
<div class="container d-flex justify-content-center align-items-center">
    <div class="col-xs-10 col-md-6 text-center">
        <h2 class="geekfont">Here's a dev joke:</h2>
        <hr class="my-4">
        <div class="joke">
            <p>@Model.question</p>
            <p>@Model.punchline</p>
        </div>
        <i class="fa-regular fa-copy" id="copyIcon"></i>
    </div>
</div>
<div class="text-center my-3">
    <button type="button" class="btn btn-info button-font">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DevJoke">I need a second performance from that dish</a>
    </button>
</div>